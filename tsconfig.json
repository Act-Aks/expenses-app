{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@screens/*": ["src/screens/*"]
    },
    "types": [
      "@types/styled-components",
      "@types/styled-components-react-native"
    ]
  }
}
